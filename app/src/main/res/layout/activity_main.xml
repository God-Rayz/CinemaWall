<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/select_video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Video" />

        <Button
            android:id="@+id/refresh_wallpaper_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh Wallpaper" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <Switch
                android:id="@+id/battery_optimization_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery Optimization" />

            <ImageView
                android:id="@+id/battery_optimization_info_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="Information about battery optimization" />

        </LinearLayout>

        <!-- Single Preview Section -->
        <LinearLayout
            android:id="@+id/video_preview_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Video Wallpaper" />

            <ImageView
                android:id="@+id/video_preview"
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:contentDescription="Video Wallpaper Preview" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>